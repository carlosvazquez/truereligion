        <a href="/cuenta/logout" class="navigation__link-title navigation--title-inverse">Salir</a>
      </li>
      {% else %}
      <li class="navigation__item isInverse">
        <a href="/cuenta/registro" class="navigation__link-title navigation--title-inverse inline-block">Registrarse</a><a href="/cuenta/login" class="navigation__link-title navigation--title-inverse inline-block">Entrar</a>
