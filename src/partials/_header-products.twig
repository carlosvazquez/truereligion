{% set pageTitle = title %}
{% set pageType = type %}
{% set isCollection = isCollection %}

{% if options is not empty %}
  {% set options = options %}
{% else %}
  {% set options = '' %}
{% endif %}

{% if pageType == 'collection' %}
  {% set parentTitle = 'Colecciones' %}
{% elseif pageType == 'category' %}
  {% set parentTitle = 'Categorías' %}
{% else %}
  {% set parentTitle = 'Productos' %}
{% endif %}

<div class="products-header">
{% if isCollection and collection.image_url is not empty %}
  <div class="splash-image">
    <div class="container">
      <div class="row">
        <div class="col-12 {{ pageTitle }}">
          <img class="collection-image" src="{{ collection.image_url }}" alt="Image header">
        </div>
      </div>
    </div>
  </div>
{% endif %}
{% if pageType != 'search' %}
  <div class="breadcrumb-container">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              {% if pageType == 'products' %}
              <li class="breadcrumb-item"><a class="breadcrumb-link" href="/productos">{{ parentTitle }}</a></li>
              {% else %}
              <li class="breadcrumb-item">{{ parentTitle }}</li>
              {% endif %}
              <li class="breadcrumb-item active" aria-current="page">{{ pageTitle }}</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
{% endif %}
  <div class="products-page">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="products-page__header">
            <h1 class="products-page__title">{{ pageTitle }}</h1>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% if useFilters %}
<div class="filtersbar">
  <div class="container">
    <div class="row">
      <div class="col-6 col-sm-4 col-md-3 col-lg-2">
        <div class="filter">
          <h4 class="filter__title">Filtro</h4>
        </div>
      </div>
      <div class="col-6 col-sm-4 col-md-3 col-lg-2 offset-md-6 offset-lg-8">
        <div class="selector">
          <h4 class="selector__title">Ordenar: <span></span></h4>
          <ul class="selector__list">
            <li class="selector__item" data-value="created-ascending">Más nuevo</li>
            <li class="selector__item" data-value="created-descending">Más viejo</li>
            <li class="selector__item" data-value="name-ascending">A-Z</li>
            <li class="selector__item" data-value="name-descending">Z-A</li>
            <li class="selector__item" data-value="price-descending">Precio Mayor a Menor</li>
            <li class="selector__item" data-value="price-ascending">Precio Menor a Mayor</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="filter-frame filter">
      <div class="row">
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">Color</h4>
          <ul class="filter__options type-color">
          {% if options.type_colors is empty %}
            <li class="filter__option color-azul" data-type="color" data-filter="azul">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-azul" data-type="color" data-filter="azul-claro">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-blanco" data-type="color" data-filter="blanco">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-negro" data-type="color" data-filter="negro">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-multicolor" data-type="color" data-filter="multicolor">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-rojo" data-type="color" data-filter="rojo">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-gris" data-type="color" data-filter="gris">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-verde" data-type="color" data-filter="verde">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-naranja" data-type="color" data-filter="naranja">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-beige" data-type="color" data-filter="beige">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-morado" data-type="color" data-filter="morado">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-rosa" data-type="color" data-filter="rosa">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            <li class="filter__option color-amarillo" data-type="color" data-filter="amarillo">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
          {% else %}
            {% for color in options.type_colors if color is not empty %}
            <li class="filter__option color-{{ color|trim }}" data-type="color" data-filter="{{ color|trim }}">
             <span class="checkmark"><i class="fa fa-check"></i></span>
            </li>
            {% endfor %}
          {% endif %}
          </ul>
        </div>
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">{{ namesTags[0]|capitalize }}</h4>
          <ul class="filter__options type-size">
          {% for value in valuesTags[0] %}
            <li class="filter__option" data-type="talla" data-filter="{{ value|trim|lower|replace({' ': '-'}) }}">{{ value|upper }}</li>
          {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">{{ namesTags[1]|capitalize }}</h4>
          <ul class="filter__options type-inseam">
          {% for value in valuesTags[1] %}
            <li class="filter__option" data-type="tags" data-filter="{{ value|trim|lower|replace({' ': '-'}) }}">{{ value }}</li>
          {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">{{ namesTags[2]|capitalize }}</h4>
          <ul class="filter__options type-silhouette">
          {% for value in valuesTags[2] %}
            <li class="filter__option" data-type="tags" data-filter="{{ value|trim|lower|replace({' ': '-'}) }}">{{ value }}</li>
          {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">{{ namesTags[3]|capitalize }}</h4>
          <ul class="filter__options type-fit">
          {% for value in valuesTags[3] %}
            <li class="filter__option" data-type="tags" data-filter="{{ value|trim|lower|replace({' ': '-'}) }}">{{ value }}</li>
          {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">{{ namesTags[4]|capitalize }}</h4>
          <ul class="filter__options type-rise">
          {% for value in valuesTags[4] %}
            <li class="filter__option" data-type="tags" data-filter="{{ value|trim|lower|replace({' ': '-'}) }}">{{ value }}</li>
          {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">{{ namesTags[5]|capitalize }}</h4>
          <ul class="filter__options type-wash">
          {% for value in valuesTags[5] %}
            <li class="filter__option" data-type="tags" data-filter="{{ value|trim|lower|replace({' ': '-'}) }}">{{ value }}</li>
          {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-1 filter-colum-js filterColumn">
          <h4 class="filter__type-title">{{ namesTags[6]|capitalize }}</h4>
          <ul class="filter__options type-pocket-flap">
          {% for value in valuesTags[6] %}
            <li class="filter__option" data-type="tags" data-filter="{{ value|trim|lower|replace({' ': '-'}) }}">{{ value }}</li>
          {% endfor %}
          </ul>
        </div>
        <div class="col-12 col-md-2 filter-colum-js filterColumnLast">
          <h4 class="filter__type-title">Rango de precio</h4>
          <ul class="filter__options type-price-range">
            <li class="filter__option" data-type="pricerange" data-filter="0-249" data-filter="0-249">$0 - $249</li>
            <li class="filter__option" data-type="pricerange" data-filter="250-500">$250 - $500</li>
            <li class="filter__option" data-type="pricerange" data-filter="501-1000">$501 - $1000</li>
            <li class="filter__option" data-type="pricerange" data-filter="1001-2000">$1001 - $2000</li>
            <li class="filter__option" data-type="pricerange" data-filter="2001-3000">$2001 - $3000</li>
            <li class="filter__option" data-type="pricerange" data-filter="3001-5000">$3001 - $5000</li>
            <li class="filter__option" data-type="pricerange" data-filter="5001-null">$5001 - &#8734;</li>
          </ul>
        </div>
      </div>
      <div class="row filters-apply">
        <div class="col-12">
          <p><button class="btn btn-disabled">Aplicar filtros</button></p>
          <p><a class="text-link" href="#">Cerrar filtros</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
