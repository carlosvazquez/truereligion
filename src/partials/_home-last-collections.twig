{% set collection_one_1 = collections[settings.home_last_collections_one_collection_1]%}
{% set collection_one_2 = collections[settings.home_last_collections_one_collection_2]%}
{% set collection_two_1 = collections[settings.home_last_collections_two_collection_1]%}
{% set collection_two_2 = collections[settings.home_last_collections_two_collection_2]%}

{% if settings.home_last_collections%}
<div class="home-last-collections">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-6">
        <div class="collection-one">
          <div class="collection-one__img-container">
            <img src="{{ settings.home_last_collections_one_image }}" alt="{{ settings.home_last_collections_one_title }}" class="collection-one__img">
          </div>
          <div class="collection-one__info">
            <h3 class="collection-one__title">{{ settings.home_last_collections_one_title }}</h3>
            <p class="collection-one__description">{{ settings.home_last_collections_one_description }}</p>
            <p><a href="/colecciones/{{ collection_one_1.permalink }}" class="collection-one__link">{{ collection_one_1.title|title }}</a></p>
            <p><a href="/colecciones/{{ collection_one_2.permalink }}" class="collection-one__link">{{ collection_one_2.title|title }}</a></p>
          </div>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="collection-two">
          <div class="collection-two__img-container">
            <img src="{{ settings.home_last_collections_two_image }}" alt="{{ settings.home_last_collections_two_title }}" class="collection-two__img">
          </div>
          <div class="collection-two__info">
            <h3 class="collection-two__title">{{ settings.home_last_collections_two_title }}</h3>
            <p class="collection-two__description">{{ settings.home_last_collections_two_description }}</p>
            <p><a href="/colecciones/{{ collection_two_1.permalink }}" class="collection-two__link">{{ collection_two_1.title|title }}</a></p>
            <p><a href="/colecciones/{{ collection_two_2.permalink }}" class="collection-two__link">{{ collection_two_2.title|title }}</a></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{% endif %}
