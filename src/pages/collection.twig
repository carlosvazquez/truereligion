{% extends 'layout.twig' %}
{% block body_class %}products-page hasModal{% endblock body_class %}
{% block body %}

{% set name = collection.permalink %}
{% set title = collection.title %}
{% set custom = false %}
{% set maxcollections = settings.maxcollections %}
{% set type_colors = [] %}
{% set type_sizes = [] %}
{% set type_inseams = [] %}
{% set type_silhouettes = [] %}
{% set type_fits = [] %}
{% set type_rises = [] %}
{% set type_washs = [] %}
{% set type_pocket_flaps = [] %}
