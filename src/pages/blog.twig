{% extends 'layout.twig' %}

{% block body_class %}blog-page{% endblock body_class %}
{% block body %}
<div class="container page">
  <div class="row">
    <div class="col-xs-12">
      <div class="page__header">
        <h1 class="page__title">{{ blog.title }}</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 page__content">
      <div class="row symmetrical-container">
        {% for post in posts %}
          {% include '_post-item.twig' %}
        {% endfor %}
      </div>
    </div>
  </div>
{% include '_pagination.twig' %}
</div>
{% endblock %}
