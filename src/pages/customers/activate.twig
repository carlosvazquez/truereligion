{% extends 'layout.twig' %}

{% block body_class %}activate-page{% endblock body_class %}
{% block body %}
<div class="container page">
  <div class="row">
    <div class="col-xs-12">
      <div class="page__header">
        <h1 class="page__title">Activar cuenta</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 page__content">
      <div class="row">
        <div class="col-sm-12 col-md-6 col-md-offset-3">
          {% form 'customer_activate' 'role="form"' %}
            <div class="form-group">
              <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Nueva Contraseña" required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control input-lg" id="password_confirmation" name="password_confirmation" placeholder="Confirmar Contraseña" required>
            </div>
            <div class="form-group">
              <button type="submit" class="btn btn-primary btn-lg">Activar cuenta</button>
            </div>
            <input type="hidden" name="token" value="{{ token }}">
            <input type="hidden" name="email" value="{{ email }}">
          {% endform %}
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
