{% extends 'layout.twig' %}

{% block body_class %}register-page{% endblock body_class %}
{% block body %}
<div class="container page">
  <div class="row">
    <div class="col-xs-12">
      <div class="page__header">
        <h1 class="page__title">Crea una Cuenta</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 text-center page__create-account">
      <p class="page__create-account-link">¿Ya tienes cuenta? <a href="/cuenta/login">Accede a tu cuenta</a></p>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12 col-md-8 col-md-offset-2 col-lg-4 col-lg-offset-4 page__content">
        {% form 'customer_register' 'role="form" class="page__login-form"' %}
          <div class="row">
            <div class="col-xs-12">
              <div class="form-group">
                <div class="input-group input-group-lg page__form--input">
                  <input type="text" data-validation="length required" data-validation-length="min4" data-validation-error-msg="Escribe tu nombre por favor." class="form-control input-lg" id="first_name" name="first_name" placeholder="Nombre" required>
                </div>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="form-group">
                <div class="input-group input-group-lg page__form--input">
                  <input type="text" data-validation="length required" data-validation-length="min4" data-validation-error-msg="Escribe tu apellido por favor." class="form-control input-lg" id="last_name" name="last_name" placeholder="Apellido" required>
                </div>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="form-group">
                <div class="input-group input-group-lg page__form--input">
                  <input type="email" data-validation="email required" data-validation-error-msg="La dirección de correo no es válida." class="form-control input-lg" id="email" name="email" placeholder="Correo electrónico" required>
                </div>
              </div>
            </div>
            <div class="col-xs-12">
              <div class="form-group">
                <div class="input-group input-group-lg page__form--input">
                  <input data-validation="length required" data-validation-length="min8" data-validation-error-msg="Escribe una contraseña de mínimo 8 caracters" type="password" class="form-control input-lg" id="password" name="password" placeholder="Contraseña" required>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 text-center">
              <div class="form-group">
                <input class="btn btn-success btn-lg page__button" type="submit" name="submit" id="submit" value="&nbsp; Crear cuenta &nbsp;">
              </div>
            </div>
          </div>
        {% endform %}
      </div>
  </div>
</div>
{% endblock %}

