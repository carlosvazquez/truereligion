{% extends 'layout.twig' %}

{% block body_class %}simple-page{% endblock body_class %}
{% block body %}
<div class="container page">
  <div class="row">
    <div class="col-xs-12">
      <div class="simple-page__header">
        <h1 class="simple-page__title">{{ page.title }}</h1>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12 page__content">
      {{ page.content }}
    </div>
  </div>
</div>
{% endblock %}
